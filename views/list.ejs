<%- include('header'); -%>

      <div class="box" id="heading">
            <% if (ListTitle === "Sat Day" || ListTitle === "Sun Day") { %>
                  <h1 style="color: purple;"><%= ListTitle %> !</h1>
            <%  } else { %>
                  <h1 style="color: blue;"><%= ListTitle %> !</h1>
            <% } %>
      </div>

      <div class="box">
      <% newListItems.forEach((item) => { %>      
       <form action="/delet" method="post">
          <div class="item"> 
            <input type="checkbox" name="check" value= <%= item._id %> onChange="this.form.submit()"/>
            <p><%= item.name %></p>    
          </div> 
          <input type="hidden" name="listName" value="<%= ListTitle %>"></input>
       </form>
       <%  }) %>             
       
         <form action="/" class="item" method="post">
            <input class="" type="text" name="frmIptDt" id="ipt" placeholder="New Item" required autocomplete="off">            
            <button class="" type="submit" name="btnList" value=<%= ListTitle %> >+</button>
          </form>  
      </div>

      
<%- include('footer'); -%>
  
    
    
